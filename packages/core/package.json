{
  "name": "@spectre-ui/core",
  "version": "0.0.1",
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "style": "./dist/styles.css",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./styles.css": {
      "import": "./dist/styles.css",
      "default": "./dist/styles.css"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build:core": "tsc --build --clean && tsc --project ./tsconfig.json",
    "build:css": "postcss src/styles/index.css -o dist/styles.css",
    "dev:core": "tsc --watch --project ./tsconfig.json",
    "dev:css": "postcss -w src/styles/index.css -o dist/styles.css"
  },
  "dependencies": {
    "@spectre-ui/utils": "workspace:^",
    "color": "^4.2.3",
    "dayjs": "^1.11.10",
    "mitt": "^3.0.1",
    "solid-js": "^1.8.5",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@types/color": "^3.0.5",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0"
  }
}